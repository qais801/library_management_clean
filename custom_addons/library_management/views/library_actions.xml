<odoo>
  <record id="action_library_membership_requests" model="ir.actions.act_window">
    <field name="name">Membership Requests</field>
    <field name="res_model">library.membership.request</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record id="action_library_members" model="ir.actions.act_window">
    <field name="name">Members</field>
    <field name="res_model">res.partner</field>
    <field name="domain">[('is_library_member', '=', True)]</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record id="action_library_membership_invoices" model="ir.actions.act_window">
    <field name="name">Membership Invoices</field>
    <field name="res_model">account.move</field>
    <field name="domain">[('invoice_line_ids.product_id.is_library_membership', '=', True)]</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record id="action_library_books" model="ir.actions.act_window">
    <field name="name">Books</field>
    <field name="res_model">library.book</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
