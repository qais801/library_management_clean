<odoo>
  <record id="view_membership_request_form" model="ir.ui.view">
    <field name="name">membership.request.form</field>
    <field name="model">library.membership.request</field>
    <field name="arch" type="xml">
      <form string="Membership Request">
        <sheet>
          <group>
            <field name="partner_id"/>
            <field name="registration_date"/>
            <field name="end_date"/>
            <field name="payment_terms"/>
            <field name="card_id" readonly="1"/>
            <field name="state" readonly="1"/>
          </group>
          <notebook>
            <page string="Membership Line">
              <field name="membership_lines">
                <tree editable="bottom">
                  <field name="product_id"/>
                  <field name="fee"/>
                </tree>
              </field>
            </page>
          </notebook>
          <footer>
            <button name="action_confirm" type="object" string="Confirm" class="btn-primary"/>
            <button name="action_mark_paid" type="object" string="Mark as Paid" class="btn-success"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
